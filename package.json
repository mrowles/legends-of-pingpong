{
  "name": "legends-of-pong",
  "version": "1.0.0-alpha.1",
  "repository": "https://github.com/project-vrum/legends-of-pingpong",
  "engine": "node 4.4.0",
  "scripts": {
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "eslint": "eslint server/**/*.js",
    "tslint": "tslint client/**/*.ts -s node_modules/tslint-stylish -t stylish",
    "build-css": "node-sass --include-path scss client/index.scss public/css/styles.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "move-assets": "cp -R client/assets/ public/assets",
    "move-html": "cp -R client/**/*.html public/",
    "move-js": "cp -R client/**/*.js public/",
    "start-dev": "concurrent \"npm run watch-css\" \"npm run move-assets\" \"npm run tsc:w\" \"node app.js\"",
    "start": "npm run tsc; node app.js"
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-beta.15",
    "body-parser": "^1.14.2",
    "bootstrap": "^3.3.6",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "ejs": "^2.4.1",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.35.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "method-override": "^2.3.5",
    "mongoose": "^4.4.5",
    "morgan": "~1.6.1",
    "path": "^0.12.7",
    "phantomjs-prebuilt": "^2.1.7",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "serve-favicon": "~2.3.0",
    "systemjs": "0.19.6",
    "tsc": "^1.20150623.0",
    "underscore": "^1.8.3",
    "zone.js": "0.6.10"
  },
  "devDependencies": {
    "concurrently": "^1.0.0",
    "express": "^4.13.4",
    "jasmine-core": "2.4.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "tsd": "^0.6.5",
    "tslint-stylish": "^2.1.0-beta",
    "typescript": "^1.8.2"
  }
}
